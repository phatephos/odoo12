<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="news_material_form" model="ir.ui.view">
            <field name="name">news_material_form</field>
            <field name="model">xr_base.new_material</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" readonly="True"/>
                        <button name="to_approve" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="xr_base.group_engineer"/>
                        <button name="to_done" string="审批" type="object" states="approve" class="oe_highlight"
                                groups="xr_base.group_engineer"/>
                        <button name="to_draft" string="取消" type="object" states="approve,done" class="oe_highlight"
                                groups="xr_base.group_engineer"/>
                    </header>
                    <sheet>
                        <group col="4" >
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="news_material_tree" model="ir.ui.view">
            <field name="name">news_material_form</field>
            <field name="model">xr_base.new_material</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name = "state"/>
                </tree>
            </field>
        </record>

        <record id="news_material_kanban" model="ir.ui.view">
            <field name="name">news_material</field>
            <field name="model">xr_base.new_material</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name = "state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                     新材料：<field name="name"/>
                                </div>
                                <div>
                                    状态：<field name = "state"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id='news_material_action' model='ir.actions.act_window'>
             <field name="name">新材料</field>
             <field name="res_model">xr_base.new_material</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,kanban</field>
         </record>
    </data>
</odoo>