<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="news_account_form" model="ir.ui.view">
            <field name="name">银行账户</field>
            <field name="model">xr_base.account</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" readonly="True"/>
                        <button name="to_approve" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="xr_base.group_traders"/>
                        <button name="to_done" string="审批" type="object" states="approve" class="oe_highlight"
                                groups="xr_base.group_manager"/>
                        <button name="to_draft" string="取消" type="object" states="approve,done" class="oe_highlight"
                                groups="xr_base.group_manager"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="account_opening" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="bank_name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="is_default" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="note" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="news_account_tree" model="ir.ui.view">
            <field name="name">银行账户</field>
            <field name="model">xr_base.account</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="account_opening" />
                    <field name="bank_name" />
                    <field name="number" />
                    <field name="is_default" />
                    <field name="note" />
                </tree>
            </field>
        </record>

         <record id="news_account_kanban" model="ir.ui.view">
            <field name="name">银行账户</field>
            <field name="model">xr_base.account</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="account_opening" />
                    <field name="bank_name" />
                    <field name="number" />
                    <field name="is_default" />
                    <field name="note" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    开户公司：<field name = "account_opening"/>
                                </div>
                                <div>
                                    账户名称：<field name = "bank_name"/>
                                </div>
                                <div>
                                    银行账号：<field name = "number"/>
                                </div>
                                <div>
                                    是否默认账户：<field name = "is_default"/>
                                </div>
                                <div>
                                    备注：<field name = "note"/>
                                </div>
                            </div>
                        </t>
                    </templates>

                </kanban>
            </field>
        </record>

        <record id="news_account_search" model="ir.ui.view">
            <field name="name">银行账户</field>
            <field name="model">xr_base.account</field>
            <field name="arch" type="xml">
                <search>
                    <field name="account_opening" />
                    <field name="bank_name" />
                    <field name="number" />
                    <field name="is_default" />
                    <field name="note" />
                </search>
            </field>
        </record>

        <record id='news_account_action' model='ir.actions.act_window'>
             <field name="name">银行账户</field>
             <field name="res_model">xr_base.account</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,search,kanban</field>
         </record>

    </data>
</odoo>