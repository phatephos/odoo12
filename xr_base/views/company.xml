<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="base_company_form" model="ir.ui.view">
            <field name="name">公司档案</field>
            <field name="model">xr_base.company</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" />
                        <button name="to_approve" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="xr_base.group_admin"/>
                        <button name="to_done" string="审批" type="object" states="approve" class="oe_highlight"
                                groups="xr_base.group_admin"/>
                        <button name="to_draft" string="取消" type="object" states="approve,done" class="oe_highlight"
                                groups="xr_base.group_admin"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="abbreviation"/>
                            <field name="business_licence"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="main_business"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="base_company_tree" model="ir.ui.view">
            <field name="name">公司档案</field>
            <field name="model">xr_base.company</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="abbreviation"/>
                    <field name="business_licence"/>
                    <field name="address"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="base_company_kanban" model="ir.ui.view">
            <field name="name">公司档案</field>
            <field name="model">xr_base.company</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="abbreviation"/>
                    <field name="business_licence"/>
                    <field name="address"/>
                    <field name="main_business"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    公司全称：<field name = "name"/>
                                </div>
                                <div>
                                    公司简称：<field name = "abbreviation"/>
                                </div>
                                <div>
                                    统一社会信用代码：<field name = "business_licence"/>
                                </div>
                                <div>
                                    状态：<field name = "state"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="base_company_search" model="ir.ui.view">
            <field name="name">公司档案</field>
            <field name="model">xr_base.company</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="abbreviation"/>
                    <field name="business_licence"/>
                    <field name="address"/>
                </search>
            </field>
        </record>

        <record id='base_company_action' model='ir.actions.act_window'>
             <field name="name">公司档案</field>
             <field name="res_model">xr_base.company</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,search,kanban</field>
        </record>
    </data>
</odoo>
