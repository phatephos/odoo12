<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="news_area_form" model="ir.ui.view">
            <field name="name">客户地区</field>
            <field name="model">xr_base.area</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" readonly="True"/>
                        <button name="to_approve" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="xr_base.group_traders"/>
                        <button name="to_done" string="审批" type="object" states="approve" class="oe_highlight"
                                groups="xr_base.group_sales_manager"/>
                        <button name="to_draft" string="取消" type="object" states="approve,done" class="oe_highlight"
                                groups="xr_base.group_sales_manager"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="archives_ids" widget="many2many_tags" options="{'no_create': True}"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="news_area_tree" model="ir.ui.view">
            <field name="name">客户地区</field>
            <field name="model">xr_base.area</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="archives_ids" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="news_area_kanban" model="ir.ui.view">
            <field name="name">客户地区</field>
            <field name="model">xr_base.area</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="archives_ids" />
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    地区名称：<field name = "name"/>
                                </div>
                                <div>
                                    客户：<field name = "archives_ids"/>
                                </div>
                                <div>
                                    状态：<field name = "state"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="news_area_search" model="ir.ui.view">
            <field name="name">客户地区</field>
            <field name="model">xr_base.area</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="archives_ids" />
                </search>
            </field>
        </record>

        <record id='news_area_action' model='ir.actions.act_window'>
             <field name="name">客户地区</field>
             <field name="res_model">xr_base.area</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,search,kanban</field>
         </record>
    </data>
</odoo>