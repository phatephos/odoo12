<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="news_customer_form" model="ir.ui.view">
            <field name="name">客户档案</field>
            <field name="model">xr_base.customer</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" readonly="True"/>
                        <button name="to_approve" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="xr_base.group_traders"/>
                        <button name="to_done" string="审批" type="object" states="approve" class="oe_highlight"
                                groups="xr_base.group_sales_manager"/>
                        <button name="to_draft" string="取消" type="object" states="approve,done" class="oe_highlight"
                                groups="xr_base.group_sales_manager"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="address" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="area_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="business_licence" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="mobile" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="finance_phone" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="identity_no" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="inviting_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="identity_no_image" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="business_licence_image" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="main_business" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <notebook>
                            <page string="银行账户">
                                <field name="account_ids"  attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="account_opening" />
                                        <field name="bank_name" />
                                        <field name="number" />
                                        <field name="is_default" />
                                        <field name="note" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group >
                            <field name="enclosure" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="note" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="news_customer_tree" model="ir.ui.view">
            <field name="name">客户档案</field>
            <field name="model">xr_base.customer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="business_licence" />
                    <field name="mobile" />
                    <field name="address" />
                    <field name="area_id" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="news_customer_kanban" model="ir.ui.view">
            <field name="name">客户档案</field>
            <field name="model">xr_base.customer</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="business_licence" />
                    <field name="mobile" />
                    <field name="address" />
                    <field name="area_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    客户名称：<field name = "name"/>
                                </div>
                                <div>
                                    统一社会信用代码：<field name = "business_licence"/>
                                </div>
                                <div>
                                    手机：<field name = "mobile"/>
                                </div>
                                <div>
                                    地址：<field name = "address"/>
                                </div>
                                <div>
                                    客户地区：<field name = "area_id"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="news_customer_search" model="ir.ui.view">
            <field name="name">客户档案</field>
            <field name="model">xr_base.customer</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="business_licence" />
                    <field name="mobile" />
                    <field name="address" />
                    <field name="area_id" />
                </search>
            </field>
        </record>


        <record id='news_customer_action' model='ir.actions.act_window'>
             <field name="name">客户</field>
             <field name="res_model">xr_base.customer</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,search,kanban</field>
         </record>
    </data>
</odoo>

