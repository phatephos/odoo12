<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="news_personnel_form" model="ir.ui.view">
            <field name="name">人员</field>
            <field name="model">xr_base.personnel</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" readonly="True"/>
                        <button name="to_approve" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="xr_base.group_admin"/>
                        <button name="to_done" string="审批" type="object" states="approve" class="oe_highlight"
                                groups="xr_base.group_admin"/>
                        <button name="to_draft" string="取消" type="object" states="approve,done" class="oe_highlight"
                                groups="xr_base.group_admin"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}"/>
                            <field name="ID_number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="customer_id" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}"/>
                            <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}"/>
                            <field name="telephone" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="news_personnel_tree" model="ir.ui.view">
            <field name="name">人员</field>
            <field name="model">xr_base.personnel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="ID_number" />
                    <field name="customer_id" />
                    <field name="department_id" />
                    <field name="telephone" />
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="news_personnel_kanban" model="ir.ui.view">
            <field name="name">人员</field>
            <field name="model">xr_base.personnel</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="ID_number" />
                    <field name="customer_id" />
                    <field name="department_id" />
                    <field name="telephone" />
                    <field name="user_id"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    名称：<field name = "name"/>
                                </div>
                                <div>
                                    身份证号码：<field name = "ID_number"/>
                                </div>
                                <div>
                                    公司：<field name = "customer_id"/>
                                </div>
                                <div>
                                    部门：<field name = "department_id"/>
                                </div>
                                <div>
                                    电话：<field name = "telephone"/>
                                </div>
                                <div>
                                    电话：<field name = "user_id"/>
                                </div>
                                <div>
                                    状态：<field name = "state"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="news_personnel_search" model="ir.ui.view">
            <field name="name">人员</field>
            <field name="model">xr_base.personnel</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="ID_number" />
                    <field name="department_id" />
                    <field name="telephone" />
                </search>
            </field>
        </record>

        <record id='news_personnel_action' model='ir.actions.act_window'>
             <field name="name">人员信息</field>
             <field name="res_model">xr_base.personnel</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,search,kanban</field>
         </record>

    </data>
</odoo>