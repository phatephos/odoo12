<?xml version="1.0"?>
<odoo>
     <data>
         <record id="partner_archives_2_contact_action" model="ir.actions.act_window">
            <field name="name">客户联系人</field>
            <field name="res_model">partner.contact</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_archives_id': active_id}</field>
        </record>

         <record id="partner_archives_2_equipment_action" model="ir.actions.act_window">
            <field name="name">产品质量要求</field>
            <field name="res_model">partner.quality_requirement</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_partner_id': active_id}</field>
        </record>


         <record id="partner_archives_tree" model="ir.ui.view">
             <field name="name">partner_archives.tree</field>
             <field name="model">partner.archives</field>
             <field name="arch" type="xml">
                 <tree string="partner_archives" default_order="create_date desc">
                     <!--<field name="code"/>-->
                     <field name="name"/>
                     <field name="business_licence"/>
                     <field name="phone"/>
                     <field name="address"/>
                     <field name="area_id"/>
                     <field name="state"/>
                 </tree>
             </field>
         </record>
         <record id="partner_archives_form" model="ir.ui.view">
             <field name="name">partner_archives.form</field>
             <field name="model">partner.archives</field>
             <field name="arch" type="xml">
                 <form string="partner_archives">
                     <header>
                         <!--<button name="change_partner_message" string="客户信息变更" type="object" class="oe_highlight"/>-->
                        <field name="state" widget="statusbar"/>
                        <!--<button name="to_approval" string="提交" type="object" states="draft" class="oe_highlight"-->
                                <!--groups="partner_erp.group_all,partner_erp.group_crm_employee,partner_erp.group_crm_secretary,partner_erp.group_crm_leader"/>-->
                        <!--<button name="to_done" string="审批" type="object" states="approval" class="oe_highlight"-->
                                <!--groups="partner_erp.group_all,partner_erp.group_crm_employee,partner_erp.group_crm_secretary,partner_erp.group_crm_leader"/>-->
                        <!--<button name="to_draft" string="取消" type="object" states="approval,done" class="oe_highlight"-->
                                <!--groups="partner_erp.group_all,partner_erp.group_crm_employee,partner_erp.group_crm_secretary,partner_erp.group_crm_leader"/>-->
                    </header>
                     <sheet>
                         <div>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="base.group_system">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                         </div>
                         </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="名称" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </h1>
                            <h2>
                                 <field name="short_name" placeholder="客户简称"/>
                             </h2>
                        </div>
                         <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action"
                                    name="%(partner_archives_2_contact_action)d" string="联系人">
                            </button>
                             <button class="oe_stat_button" type="action"
                                    name="%(partner_archives_2_equipment_action)d" string="产品质量要求">
                            </button>
                             <button name="action_get_attachment_view" class="oe_stat_button" icon="fa-book" type="object">
                                    <field name="attachment_number" widget="statinfo" string="附件上传"/>
                                </button>
                            </div>
                         <group col="8">
                             <field name="is_sale"/>
                             <field name="is_purchase"/>
                             <field name="is_middle"/>
                             <field name="is_material"/>
                             <!--<field name="is_equipment"/>-->
                             <field name="bill_type" readonly="1"/>
                             <field name="business_licence" required="1"/>
                             <field name="material_ids" widget="many2many_tags"  options="{'no_create': True}"/>
                             <field name="area_id" options="{'no_create': True}"/>
                             <field name="address"/>
                             <field name="phone"/>
                             <field name="mobile"/>
                             <field name="inviting_id" options="{'no_create': True}"/>
                            <!--<field name="bill_type" readonly="1"/>-->
                             <field name="fax"/>
                             <field name="finance_phone"/>
                             <field name="identity_no"/>
                             <field name="identity_no" invisible="1"/>
                             <field name="identity_no_image" widget="image" class="oe_avatar" options="{&quot;size&quot;: [90, 90]}"/>
                             <field name="business_licence_image" widget="image" class="oe_avatar" options="{&quot;size&quot;: [90, 90]}"/>
                             <!--<field name="legal_representative_id" options="{'no_create': True}"/>-->
                         </group>
                         <group>
                             <field name="main_business"/>
                         </group>
                         <group create="0">
                             <field name="account_ids">
                                <tree string="Purchase Contract Lines" create="0" default_order="id desc">
                                       <field name="archives_id" required="0" options="{'no_create': True}" string="客户" domain="[('bill_type','=','partner')]"
                                               context="{'form_view_ref':'partner_erp.partner_archives_form'}" invisible="1"/>
                                        <!--<field name="name" options="{'no_create': True}"/>-->
                                        <field name="bank_table_id"/>
                                        <!--<field name="bank_table_id" options="{'no_create': True}"/>-->
                                        <field name="bank_name"/>
                                        <field name="number"/>
                                        <field name="currency_id" required="1" options="{'no_create': True}"/>
                                        <field name="account_type_id" options="{'no_create': True}"/>
                                        <field name="account_type_detail_id" options="{'no_create': True}"/>
                                        <field name="account_nature"/>
                                        <field name="account_open_date"/>
                                        <field name="account_state"/>
                                        <field name="note"/>
                                        <field name="is_default"/>
                                        <field name="bill_type"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                             </field>
                         </group>
                         <group>
                             <field name="datas_fname" invisible="1"/>
                             <field name="datas" filename="datas_fname"/>
                             <field name="note"/>
                         </group>
                         <group col="4">
                             <!--<field name="create_id" required="1"/>-->
                             <field name="date"/>
                         </group>
                         <group col="4">
                            <field name="create_uid" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="flow_company_id" invisible="1" options="{'no_create': True}"/>
                         </group>
                     </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                 </form>
             </field>
         </record>
         <record id="partner_archives_filter" model="ir.ui.view">
             <field name="name">partner_archives.select</field>
             <field name="model">partner.archives</field>
             <field name="arch" type="xml">
                 <search string="partner_archives">
                    <field name="name" string="名称/信用代码/简称" filter_domain="['|','|',('name','ilike',self),('short_name','ilike',self),('business_licence','ilike',self)]"/>                     <!--<field name="code"/>-->
                     <!--<field name="name"/>-->
                     <!--<field name="phone"/>-->
                     <!--<field name="address"/>-->
                     <!--<field name="area_id"/>-->
                     <!--<field name="fax"/>-->
                     <!--<field name="mobile"/>-->
                     <!--<field name="bank_of_deposit"/>-->
                     <!--<field name="bank_account"/>-->
                     <!--<field name="business_licence"/>-->
                     <!--<field name="identity_no"/>-->
                     <!--<field name="create_id"/>-->
                     <!--<field name="date"/>-->
                </search>
             </field>
         </record>
         <!--看板视图-->
         <record id='partner_archives_kanban' model='ir.ui.view'>
            <field name="name">partner.archives.kanban</field>
            <field name="model">partner.archives</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date desc">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="address"/>
                    <field name="business_licence"/>
                    <field name="area_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        客户名称:<strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                </div>
                                <div>
                                    统一社会信用代码:<field name="business_licence"/>
                                </div>
                                <div>
                                    电话:<field name="phone"/>
                                </div>
                                <div>
                                    客户地区:<field name="area_id"/>
                                </div>
                                <div>
                                    客户地址:<field name="address"/>
                                </div>
                                <div class="row">
                                    <!--<div class="col-xs-6">-->
                                        <!--<i class="fa fa-money"/> <field name="create_uid"/>-->
                                    <!--</div>-->
                                    <!--<div class="col-xs-6 text-right">-->
                                        <!--<i class="fa fa-clock-o"/> <field name="create_date"/>-->
                                    <!--</div>-->
                                </div>
                                <div class="row mt4">
                                    <!--<div class="col-xs-6">-->
                                        <!--<a class="btn btn-xs btn-danger" name="unlink" groups="base.group_erp_manager" string="删除" type="object">-->
                                            <!--删除-->
                                        <!--</a>-->
                                    <!--</div>-->
                                    <div class="col-xs-6">
                                        <!--<img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>-->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
         </record>
         <record id='partner_archives_action' model='ir.actions.act_window'>
             <field name="name">客户档案</field>
             <field name="res_model">partner.archives</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,kanban</field>
             <field name="search_view_id" ref="partner_archives_filter"/>
             <!--<field name="domain">[('order_id.order_type', '=', 'equipment')]</field>-->
             <field name="domain">[('bill_type', '=', 'partner')]</field>
             <field name="context">{'default_bill_type':'partner'}</field>
             <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('partner_archives_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('partner_archives_form')}),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('partner_archives_kanban')})
                          ]"/>
             <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                 Click to create a new vehicle.
               </p><p>
                 You will be able to manage your fleet by keeping track of the
                 contracts, services, fixed and recurring costs, odometers and
                 fuel logs associated to each vehicle.
             </p><p>
                 Odoo will warn you when services or contract have to be
                 renewed.
               </p>
             </field>
         </record>

     </data>
</odoo>

