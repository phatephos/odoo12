<?xml  version="1.0"?>
<odoo>
          <data>
<!--现金流量-->
        <record id="budget_items_tree" model="ir.ui.view">
             <field name="name">partner.budget_items.tree</field>
             <field name="model">partner.budget_items</field>
             <field name="arch" type="xml">
                <tree string="">
                    <field name="name" />
                    <field name="department_id" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="budget_items_form" model="ir.ui.view">
            <field name="name">partner.budget_items.form</field>
            <field name="model">partner.budget_items</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_approval" string="提交" type="object" states="draft" class="oe_highlight"/>
                        <button name="action_approved" string="审批" type="object" states="confirm" class="oe_highlight"/>
                        <button name="action_draft" string="取消" type="object" states="confirm,done" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="department_id" options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="budget_items_search_view" model="ir.ui.view">
            <field name="name">partner.budget_items.search</field>
            <field name="model">partner.budget_items</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="name" string="名称/部门" filter_domain="['|',('name','ilike',self),('department_id','ilike',self)]"/>
                    <!--<field name="name" />-->
                    <!--<field name="department_id" />-->
                </search>
            </field>
        </record>
         <!--看板视图-->
         <record id='budget_items_kanban' model='ir.ui.view'>
            <field name="name">partner.budget_items.kanban</field>
            <field name="model">partner.budget_items</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date desc">
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        名称:<strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <div>
                                        归口管理部门:<field name="department_id"/>
                                    </div>
                                    <!--<field name="state" widget="kanban_label_selection" options="{'classes': {'new': 'draft', 'confirmed': 'confirm', 'cancelled':'second'}}"/>-->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id='budget_items_action' model='ir.actions.act_window'>
            <field name="name">预算项目</field>
            <field name="res_model">partner.budget_items</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="budget_items_search_view"/>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'sequence': 10, 'view_mode': 'tree', 'view_id': ref('budget_items_tree')}),
                          (0, 0, {'sequence': 20, 'view_mode': 'form', 'view_id': ref('budget_items_form')}),
                          (0, 0, {'sequence': 20, 'view_mode': 'kanban', 'view_id': ref('budget_items_kanban')})
                          ]"/>
        </record>
     </data>
</odoo>