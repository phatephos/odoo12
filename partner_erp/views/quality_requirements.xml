<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_quality_requirement_form" model="ir.ui.view">
            <field name="name">partner.quality_requirement.form </field>
            <field name="model">partner.quality_requirement</field>
            <field name="arch" type="xml">
                <form string='quality_requirement'>
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="to_approval" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="partner_erp.group_all,partner_erp.group_crm_secretary,partner_erp.group_crm_leader"/>
                        <button name="to_done" string="审批" type="object" states="approval" class="oe_highlight"
                                groups="partner_erp.group_all,partner_erp.group_crm_secretary,partner_erp.group_crm_leader"/>
                        <button name="to_draft" string="取消" type="object" states="approval,done" class="oe_highlight"
                                groups="partner_erp.group_all,partner_erp.group_crm_secretary,partner_erp.group_crm_leader"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="partner_id" options="{'no_create': True}" domain="[('bill_type', '=', 'partner')]"
                                   context="{'form_view_ref':'partner_erp.partner_archives_form'}"/>
                            <field name="product_id" options="{'no_create': True}" domain="[('archives_ids','=', partner_id)]"/>
                        </group>
                        <group col="2">
                            <field name="company_standard"/>
                            <field name="partner_standard"/>
                            <field name="standard_number"/>
                        </group>
                        <group>
                            <field name="create_uid" string="创建人" options="{'no_create': True}"/>
                        </group>
                        <group col="4">
                            <field name="create_uid" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                         </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree视图-->
        <record id="view_partner_quality_requirement_tree" model="ir.ui.view">
            <field name="name">quality_requirement tree</field>
            <field name="model">partner.quality_requirement</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="expense" default_order="create_date desc">
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="company_standard"/>
                    <field name="partner_standard"/>
                    <field name="standard_number"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_partner_quality_requirement_filter" model="ir.ui.view">
            <field name="name">partner.quality_requirement.filter</field>
            <field name="model">partner.quality_requirement</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="公司/产品/标准号" filter_domain="['|','|',('partner_id','ilike',self),('product_id','ilike',self),('standard_number','ilike',self)]"/>
                    <!--<field name="partner_id"/>-->
                    <!--<field name="product_id"/>-->
                    <!--<field name="standard_number"/>-->
               </search>
            </field>
        </record>
        <!--看板视图-->
         <record id='partner_quality_requirement_kanban' model='ir.ui.view'>
            <field name="name">partner.quality_requirement.kanban</field>
            <field name="model">partner.quality_requirement</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date desc">
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="company_standard"/>
                    <field name="partner_standard"/>
                    <field name="standard_number"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        客户名称:<strong class="o_kanban_record_title"><field name="partner_id"/></strong>
                                    </div>
                                    <!--<field name="state" widget="kanban_label_selection" options="{'classes': {'new': 'draft', 'confirmed': 'confirm', 'cancelled':'second'}}"/>-->
                                </div>
                                <div>
                                    产品:<field name="product_id"/>
                                </div>
                                <div>
                                    我司标准:<field name="company_standard"/>
                                </div>
                                <div>
                                    客户标准:<field name="partner_standard"/>
                                </div>
                                <div>
                                    标准号:<field name="standard_number"/>
                                </div>
                                <div class="row">
                                    <!--<div class="col-xs-6">-->
                                        <!--<i class="fa fa-money"/> <field name="create_uid"/>-->
                                    <!--</div>-->
                                    <!--<div class="col-xs-6 text-right">-->
                                        <!--<i class="fa fa-clock-o"/> <field name="create_date"/>-->
                                    <!--</div>-->
                                </div>
                                <div class="row mt4">
                                    <!--<div class="col-xs-6">-->
                                        <!--<a class="btn btn-xs btn-danger" name="unlink" groups="base.group_erp_manager" string="删除" type="object">-->
                                            <!--删除-->
                                        <!--</a>-->
                                    <!--</div>-->
                                    <div class="col-xs-6">
                                        <!--<img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>-->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--动作-->
        <record id="quality_requirement_action" model="ir.actions.act_window">
            <field name="name">产品质量要求</field>
            <field name="res_model">partner.quality_requirement</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_partner_quality_requirement_filter"/>
            <!--<field name="groups_id" eval="[(4, ref('crm_c.group_crm_c_base'))]"/>-->
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_partner_quality_requirement_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_partner_quality_requirement_form')})
                          ]"/>
        </record>

    </data>
</odoo>

