<?xml version="1.0"?>
<odoo>
     <data>
         <record id="archives_users_tree" model="ir.ui.view">
             <field name="name">archives_users.tree</field>
             <field name="model">partner.archives</field>
             <field name="arch" type="xml">
                 <tree string="psn_coll" default_order="create_date desc">
                    <field name="name" required="1"/>
                    <field name="business_licence" string="身份证号"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <field name="user_id"/>
                    <field name="phone"/>
                     <field name="state"/>
                 </tree>
             </field>
         </record>
         <record id="archives_users_form" model="ir.ui.view">
             <field name="name">archives_users.form</field>
             <field name="model">partner.archives</field>
             <field name="arch" type="xml">
                 <form string="psn_coll">
                     <header>
                        <field name="state" widget="statusbar"/>
                        <button name="to_approval" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="partner_erp.group_all"/>
                        <button name="to_done" string="审批" type="object" states="approval" class="oe_highlight"
                                groups="partner_erp.group_all"/>
                        <button name="to_draft" string="取消" type="object" states="approval,done" class="oe_highlight"
                                groups="partner_erp.group_all"/>
                    </header>
                     <sheet>
                        <group col="8">
                            <field name="name" required="1"/>
                            <field name="business_licence" string="身份证号"/>
                            <field name="company_id" options="{'no_create': True}" domain="[('is_company', '=', True)]"/>
                            <field name="department_id" options="{'no_create': True}"/>
                            <field name="user_id" options="{'no_create': True}"/>
                            <field name="phone"/>
                            <field name="bill_type" readonly="1"/>
                            <field name="user_char" readonly="1"/>
                            <!--<field name="legal_representative_id" options="{'no_create': True}"/>-->
                        </group>
                         <group col="4">
                            <field name="create_uid" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                         </group>
                     </sheet>
                 </form>
             </field>
         </record>
         <record id="archives_users_filter" model="ir.ui.view">
             <field name="name">archives_users.select</field>
             <field name="model">partner.archives</field>
             <field name="arch" type="xml">
                 <search string="psn_coll">
                     <field name="name" string="名称/身份证号/公司" filter_domain="['|','|',('name','ilike',self),('company_id','ilike',self),('business_licence','ilike',self)]"/>
                    <!--<field name="name"/>-->
                    <!--<field name="identity_no" string="身份证号"/>-->
                    <!--<field name="company_id"/>-->
                    <!--<field name="department_id"/>-->
                    <!--<field name="user_id"/>-->
                </search>
             </field>
         </record>
         <!--看板视图-->
         <record id='partner_archives_users_kanban' model='ir.ui.view'>
            <field name="name">partner.archives.kanban</field>
            <field name="model">partner.archives</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date desc">
                    <field name="name"/>
                    <field name="business_licence"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        人员名称:<strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                </div>
                                <div>
                                    身份证号:<field name="business_licence"/>
                                </div>
                                <div>
                                    公司:<field name="company_id"/>
                                </div>
                                <div>
                                    部门:<field name="department_id"/>
                                </div>
                                <div class="row">
                                    <!--<div class="col-xs-6">-->
                                        <!--<i class="fa fa-money"/> <field name="create_uid"/>-->
                                    <!--</div>-->
                                    <!--<div class="col-xs-6 text-right">-->
                                        <!--<i class="fa fa-clock-o"/> <field name="create_date"/>-->
                                    <!--</div>-->
                                </div>
                                <div class="row mt4">
                                    <!--<div class="col-xs-6">-->
                                        <!--<a class="btn btn-xs btn-danger" name="unlink" groups="base.group_erp_manager" string="删除" type="object">-->
                                            <!--删除-->
                                        <!--</a>-->
                                    <!--</div>-->
                                    <div class="col-xs-6">
                                        <!--<img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>-->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
         </record>
         <record id='archives_users_action' model='ir.actions.act_window'>
             <field name="name">人员档案</field>
             <field name="res_model">partner.archives</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,kanban</field>
             <field name="search_view_id" ref="archives_users_filter"/>
             <!--<field name="domain">[('order_id.order_type', '=', 'equipment')]</field>-->
             <field name="domain">[('bill_type', '=', 'users')]</field>
             <field name="context">{'default_bill_type':'users'}</field>
             <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('archives_users_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('archives_users_form')}),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('partner_archives_users_kanban')})
                          ]"/>
             <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                 Click to create a new vehicle.
               </p><p>
                 You will be able to manage your fleet by keeping track of the
                 contracts, services, fixed and recurring costs, odometers and
                 fuel logs associated to each vehicle.
             </p><p>
                 Odoo will warn you when services or contract have to be
                 renewed.
               </p>
             </field>
         </record>

     </data>
</odoo>

