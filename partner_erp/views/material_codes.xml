<?xml version="1.0"?>
<odoo>
     <data>
         <record id="code_material_codes_tree" model="ir.ui.view">
             <field name="name">code.material_codes.tree</field>
             <field name="model">code.material_codes</field>
             <field name="arch" type="xml">
                 <tree string="material_codes" default_order="create_date desc">
                    <field name="name"/>
                    <field name="invcode"/>
                    <field name="invspec"/>
                     <field name="material_id"/>
                    <field name="label_id"/>
                    <field name="main_measurement"/>
                     <field name="state"/>
                     <field name="tax_id"/>
                     <field name="other_name_ids"/>
                 </tree>
             </field>
         </record>
         <record id="code_material_codes_form" model="ir.ui.view">
             <field name="name">code.material_codes.form</field>
             <field name="model">code.material_codes</field>
             <field name="arch" type="xml">
                 <form string="material_codes">
                     <header>
                        <field name="state" widget="statusbar"/>
                        <button name="to_approval" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="partner_erp.group_all"/>
                        <button name="to_done" string="审批" type="object" states="approval" class="oe_highlight"
                                groups="partner_erp.group_all"/>
                        <button name="to_draft" string="取消" type="object" states="approval,done" class="oe_highlight"
                                groups="partner_erp.group_all"/>
                    </header>
                     <sheet>
                        <group col="8">
                            <field name="invcode"/>
                            <field name="name" required="1"/>
                            <field name="material_id" options="{'no_create': True}"/>
                            <field name="label_id" options="{'no_create': True}"/>
                            <field name="invspec"/>
                            <field name="main_measurement" options="{'no_create': True}"/>
                            <field name="tax_id" options="{'no_create': True}"/>
                            <field name="other_name_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="domain"
                                   widget="domain"
                                   options="{'model': 'code.material'}"
                                   class="o_row"/>
                        </group>
                         <group col="2">
                             <field name="domain"
                                   widget="domain"
                                   options="{'model': 'code.material'}"
                                   class="o_row"/>
                         </group>
                         <group col="4">
                            <field name="create_uid" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                         </group>
                     </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                 </form>
             </field>
         </record>
         <record id="code_material_codes_filter" model="ir.ui.view">
             <field name="name">code.material_codes.select</field>
             <field name="model">code.material_codes</field>
             <field name="arch" type="xml">
                 <search string="material_codes">
                     <field name="name" string="名称/分类/标签/编码/首字母" filter_domain="['|','|','|','|',('name','ilike',self),('material_id','ilike',self),('label_id','ilike',self),('invcode','ilike',self),('first_letter','ilike',self)]"/>
                    <!--<field name="name"/>-->
                    <!--<field name="material_id"/>-->
                    <!--<field name="label_id"/>-->
                    <!--<field name="main_measurement"/>-->
                </search>
             </field>
         </record>
         <!--看板视图-->
         <record id='code_material_codes_kanban' model='ir.ui.view'>
            <field name="name">code.material_codes.kanban</field>
            <field name="model">code.material_codes</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date desc">
                    <field name="name"/>
                    <field name="material_id"/>
                    <field name="label_id"/>
                    <field name="main_measurement"/>
                    <field name="invcode"/>
                    <field name="invspec"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        物料名称:<strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <!--<field name="state" widget="kanban_label_selection" options="{'classes': {'new': 'draft', 'confirmed': 'confirm', 'cancelled':'second'}}"/>-->
                                </div>
                                <div>
                                    存货分类:<field name="material_id"/>
                                </div>
                                <div>
                                    标签:<field name="label_id"/>
                                </div>
                                <div>
                                    计量单位:<field name="main_measurement"/>
                                </div>
                                <div>
                                    物料编码:<field name="invcode"/>
                                </div>
                                <div>
                                    规格:<field name="invspec"/>
                                </div>
                                <div class="row">
                                    <!--<div class="col-xs-6">-->
                                        <!--<i class="fa fa-money"/> <field name="create_uid"/>-->
                                    <!--</div>-->
                                    <!--<div class="col-xs-6 text-right">-->
                                        <!--<i class="fa fa-clock-o"/> <field name="create_date"/>-->
                                    <!--</div>-->
                                </div>
                                <div class="row mt4">
                                    <!--<div class="col-xs-6">-->
                                        <!--<a class="btn btn-xs btn-danger" name="unlink" groups="base.group_erp_manager" string="删除" type="object">-->
                                            <!--删除-->
                                        <!--</a>-->
                                    <!--</div>-->
                                    <div class="col-xs-6">
                                        <!--<img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>-->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
         <record id='code_material_codes_action' model='ir.actions.act_window'>
             <field name="name">物料信息</field>
             <field name="res_model">code.material_codes</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,kanban</field>
             <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                 Click to create a new vehicle.
               </p><p>
                 You will be able to manage your fleet by keeping track of the
                 contracts, services, fixed and recurring costs, odometers and
                 fuel logs associated to each vehicle.
             </p><p>
                 Odoo will warn you when services or contract have to be
                 renewed.
               </p>
             </field>
         </record>

     </data>
</odoo>

