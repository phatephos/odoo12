<?xml version="1.0"?>
<odoo>
     <data>
         <record id="partner_users_tree" model="ir.ui.view">
             <field name="name">partner_users.tree</field>
             <field name="model">partner.account</field>
             <field name="arch" type="xml">
                 <tree string="partner_users" default_order="create_date desc">
                    <field name="archives_id" string="人员名称"/>
                    <field name="currency_id"/>
                    <!--<field name="name"/>-->
                    <field name="bank_table_id"/>
                    <field name="bank_name"/>
                    <field name="number"/>
                    <field name="note"/>
                    <field name="state"/>
                 </tree>
             </field>
         </record>
         <record id="partner_users_form" model="ir.ui.view">
             <field name="name">partner_users.form</field>
             <field name="model">partner.account</field>
             <field name="arch" type="xml">
                 <form string="partner_users">
                     <header>
                        <field name="state" widget="statusbar"/>
                        <button name="to_approval" string="提交" type="object" states="draft" class="oe_highlight"
                                groups="partner_erp.group_all,partner_erp.group_fm_employee,partner_erp.group_fm_leader"/>
                        <button name="to_done" string="审批" type="object" states="approval" class="oe_highlight"
                                groups="partner_erp.group_all,partner_erp.group_fm_employee,partner_erp.group_fm_leader"/>
                        <button name="to_draft" string="取消" type="object" states="approval,done" class="oe_highlight"
                                groups="partner_erp.group_all,partner_erp.group_fm_employee,partner_erp.group_fm_leader"/>
                    </header>
                     <sheet>
                        <group>
                            <field name="archives_id" options="{'no_create': True}" string="员工" domain="[('bill_type','=','users')]"/>
                            <!--<field name="name" options="{'no_create': True}"/>-->
                            <field name="bank_table_id" options="{'no_create': True}"/>
                            <field name="bank_name"/>
                            <field name="number"/>
                            <field name="currency_id" required="1" options="{'no_create': True}"/>
                            <!--<field name="account_type"/>-->
                            <field name="account_type_id" options="{'no_create': True}"/>
                            <field name="account_type_detail_id" options="{'no_create': True}"/>
                            <field name="account_nature"/>
                            <field name="account_open_date"/>
                            <field name="account_state"/>
                            <field name="note"/>
                        </group>
                         <group col="4">
                            <field name="create_uid" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                         </group>
                     </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                 </form>
             </field>
         </record>
         <record id="partner_users_filter" model="ir.ui.view">
             <field name="name">partner_users.filter</field>
             <field name="model">partner.account</field>
             <field name="arch" type="xml">
                 <search string="partner_users">
                     <field name="name" string="人员名称/银行账户/银行账户" filter_domain="['|','|',('archives_id','ilike',self),('number','ilike',self),('bank_name','ilike',self)]"/>
                    <!--<field name="archives_id"/>-->
                    <!--<field name="bank_name"/>-->
                    <!--<field name="number"/>-->
                </search>
             </field>
         </record>
         <!--看板视图-->
         <record id='partner_users_kanban' model='ir.ui.view'>
            <field name="name">partner.account.kanban</field>
            <field name="model">partner.account</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date desc">
                    <field name="archives_id"/>
                    <!--<field name="name"/>-->
                    <field name="bank_table_id"/>
                    <field name="bank_name"/>
                    <field name="number"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        人员名称:<strong class="o_kanban_record_title"><field name="archives_id"/></strong>
                                    </div>
                                    <!--<field name="state" widget="kanban_label_selection" options="{'classes': {'new': 'draft', 'confirmed': 'confirm', 'cancelled':'second'}}"/>-->
                                </div>
                                <div>
                                    银行:<field name="bank_table_id"/>
                                </div>
                                <div>
                                    账户名称:<field name="bank_name"/>
                                </div>
                                <div>
                                    银行账号:<field name="number"/>
                                </div>
                                <div class="row">
                                    <!--<div class="col-xs-6">-->
                                        <!--<i class="fa fa-money"/> <field name="create_uid"/>-->
                                    <!--</div>-->
                                    <!--<div class="col-xs-6 text-right">-->
                                        <!--<i class="fa fa-clock-o"/> <field name="create_date"/>-->
                                    <!--</div>-->
                                </div>
                                <div class="row mt4">
                                    <!--<div class="col-xs-6">-->
                                        <!--<a class="btn btn-xs btn-danger" name="unlink" groups="base.group_erp_manager" string="删除" type="object">-->
                                            <!--删除-->
                                        <!--</a>-->
                                    <!--</div>-->
                                    <div class="col-xs-6">
                                        <!--<img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>-->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
         <record id='partner_users_action' model='ir.actions.act_window'>
             <field name="name">员工账户</field>
             <field name="res_model">partner.account</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,kanban</field>
             <field name="domain">[('bill_type', '=', 'users')]</field>
             <field name="context">{'default_bill_type':'users'}</field>
             <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('partner_users_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('partner_users_form')}),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('partner_users_kanban')})
                          ]"/>
             <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                 Click to create a new vehicle.
               </p><p>
                 You will be able to manage your fleet by keeping track of the
                 contracts, services, fixed and recurring costs, odometers and
                 fuel logs associated to each vehicle.
             </p><p>
                 Odoo will warn you when services or contract have to be
                 renewed.
               </p>
             </field>
         </record>

     </data>
</odoo>

