<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--现金流量表项目-->
        <record id="fm_cash_flow_items_tree" model="ir.ui.view">
             <field name="name">fm.cash_flow_items_tree</field>
             <field name="model">fm.cash_flow_items</field>
             <field name="arch" type="xml">
                <tree string="现金流量表项目">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="fm_cash_flow_items_form" model="ir.ui.view">
            <field name="name">fm.cash_flow_items_form</field>
            <field name="model">fm.cash_flow_items</field>
            <field name="arch" type="xml">
                <form string="现金流量表项目">
                    <sheet>
                        <group col="8">
                            <field name="code"/>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="fm_cash_flow_items_view" model="ir.ui.view">
            <field name="name">fm.cash_flow_items.search</field>
            <field name="model">fm.cash_flow_items</field>
            <field name="arch" type="xml">
                <search string="现金流量表项目">
                    <field name="name" filter_domain="[('name','ilike',self),('code','ilike',self)]"/>
                    <filter name="you_active" string="有效" domain="[('active','=',True)]"/>
                    <filter name="wu_active" string="无效" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>
        <record id='fm_cash_flow_items_action' model='ir.actions.act_window'>
            <field name="name">现金流量表项目</field>
            <field name="res_model">fm.cash_flow_items</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_you_active':True}</field>
            <field name="search_view_id" ref="fm_cash_flow_items_view"/>
        </record>
    </data>
</odoo>
