<?xml version="1.0"?>
<odoo>
     <data>
<!--科目标签-->
        <record id="fm_account_acoount_tag_tree" model="ir.ui.view">
             <field name="name">fm.account.tag.tree</field>
             <field name="model">fm.account.tag</field>
             <field name="arch" type="xml">
                <tree string="科目标签">
                    <field name="name"/>
                    <field name="model_ids" widget="many2many_tags"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="fm_account_acoount_tag_form" model="ir.ui.view">
            <field name="name">fm.account.tag.form</field>
            <field name="model">fm.account.tag</field>
            <field name="arch" type="xml">
                <form string="科目标签">
                    <sheet>
                        <group col="8">
                            <field name="name"/>
                            <field name="active"/>
                            <!--<field name="person"/>-->
                            <field name="model_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="fm_account_acoount_tag_search_view" model="ir.ui.view">
            <field name="name">fm.account.tag.search</field>
            <field name="model">fm.account.tag</field>
            <field name="arch" type="xml">
                <search string="科目标签">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <filter name="you_active" string="有效" domain="[('active','=',True)]"/>
                    <filter name="wu_active" string="无效" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>

        <record id='fm_account_acoount_tag_action' model='ir.actions.act_window'>
            <field name="name">科目标签</field>
            <field name="res_model">fm.account.tag</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_you_active':True}</field>
            <field name="search_view_id" ref="fm_account_acoount_tag_search_view"/>
        </record>
     </data>
</odoo>

