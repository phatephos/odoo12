<?xml version="1.0"?>
<odoo>
     <data>

<!--账簿-->
        <record id="fm_account_acoount_journal_tree" model="ir.ui.view">
             <field name="name">fm.account.journal.tree</field>
             <field name="model">fm.account.journal</field>
             <field name="arch" type="xml">
                <tree string="账簿" >
                    <field name="name"/>
                    <field name="company_id"/>
                    <!--<field name="journal_type"/>-->
                    <!--<field name="debit_account_id"/>-->
                    <!--<field name="credit_account_id"/>-->
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="fm_account_acoount_journal_form" model="ir.ui.view">
            <field name="name">fm.account.journal.form</field>
            <field name="model">fm.account.journal</field>
            <field name="arch" type="xml">
                <form string="账簿">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="名称"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="company_id"/>
                            <!--<field name="debit_account_id"/>-->
                            <!--<field name="journal_type"/>-->
                            <!--<field name="credit_account_id"/>-->
                            <field name="active"/>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="fm_account_acoount_journal_search_view" model="ir.ui.view">
            <field name="name">fm.account.journal.search</field>
            <field name="model">fm.account.journal</field>
            <field name="arch" type="xml">
                <search string="账簿">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <!--<field name="debit_account_id"/>-->
                    <!--<field name="credit_account_id"/>-->
                    <filter name="you_active" string="有效" domain="[('active','=',True)]"/>
                    <filter name="wu_active" string="无效" domain="[('active','=',False)]"/>
                    <!--<group expand="0" string="Group By..." colspan="16">-->
                        <!--<filter string="类型" domain="[]" context="{'group_by':'journal_type'}"/>-->
                    <!--</group>-->
                </search>
            </field>
        </record>

        <record id='fm_account_acoount_journal_action' model='ir.actions.act_window'>
            <field name="name">账簿</field>
            <field name="res_model">fm.account.journal</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_you_active':True}</field>
            <field name="search_view_id" ref="fm_account_acoount_journal_search_view"/>
        </record>

     </data>
</odoo>

