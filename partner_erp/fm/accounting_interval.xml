<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_fm_accounting_interval_form" model="ir.ui.view">
            <field name="name">fm.accounting_interval.form </field>
            <field name="model">fm.accounting_interval</field>
            <field name="arch" type="xml">
                <form string='accounting_interval'>
                    <sheet>
                        <group col="2">
                            <field name="name"/>
                            <field name="accounting_start" required="1"/>
                            <field name="accounting_end" required="1"/>
                            <field name="accounting_year"/>
                            <field name="accounting_month"/>
                        </group>
                        <group col="4">
                             <field name="input_person" string="录入人" options="{'no_create_edit': True}"
                                    domain="[('bill_type','=','users')]" readonly="1"/>
                             <field name="order_date" string="录入日期"  readonly="1"/>
                         </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree视图-->
        <record id="view_fm_accounting_interval_tree" model="ir.ui.view">
            <field name="name">accounting_interval tree</field>
            <field name="model">fm.accounting_interval</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="accounting_interval">
                    <field name="name"/>
                    <field name="accounting_start"/>
                    <field name="accounting_end"/>
                    <field name="accounting_year"/>
                    <field name="accounting_month"/>
                </tree>
            </field>
        </record>

        <!--看板视图-->
         <record id='fm_accounting_interval_kanban' model='ir.ui.view'>
            <field name="name">accounting_interval kanban</field>
            <field name="model">fm.accounting_interval</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date desc">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    会计期间:<field name="name"/>
                                </div>
                                <div class="o_kanban_record_top">
                                    会计开始日期:<field name="accounting_start"/>
                                </div>
                                <div class="o_kanban_record_top">
                                    会计结束日期:<field name="accounting_end"/>
                                </div>
                                <div class="o_kanban_record_top">
                                    会计年度:<field name="accounting_year"/>
                                </div>
                                <div class="o_kanban_record_top">
                                    会计月:<field name="accounting_month"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="view_fm_accounting_interval_filter" model="ir.ui.view">
            <field name="name">fm.accounting_interval.filter</field>
            <field name="model">fm.accounting_interval</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <group expand="0" string="Group By">
                        <filter string="会计期间" domain="[]" context="{'group_by' : 'name'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--动作-->
        <record id="fm_accounting_interval_action" model="ir.actions.act_window">
            <field name="name">会计期间</field>
            <field name="res_model">fm.accounting_interval</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_fm_accounting_interval_filter"/>
        </record>

    </data>
</odoo>
