<?xml version="1.0"?>
<odoo>
     <data>

<!--科目类型-->
        <record id="fm_account_acoount_type_tree" model="ir.ui.view">
             <field name="name">fm.account.type.tree</field>
             <field name="model">fm.account.type</field>
             <field name="arch" type="xml">
                <tree string="科目类型">
                    <field name="name"/>
                    <field name="account_type"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="fm_account_acoount_type_form" model="ir.ui.view">
            <field name="name">fm.account.type.form</field>
            <field name="model">fm.account.type</field>
            <field name="arch" type="xml">
                <form string="科目类型">
                    <sheet>
                        <group col="8">
                            <field name="name"/>
                            <field name="account_type" />
                            <field name="active"/>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="fm_account_acoount_type_search_view" model="ir.ui.view">
            <field name="name">fm.account.type.search</field>
            <field name="model">fm.account.type</field>
            <field name="arch" type="xml">
                <search string="科目类型">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <filter name="you_active" string="有效" domain="[('active','=',True)]"/>
                    <filter name="wu_active" string="无效" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By..." colspan="16">
                        <filter string="类型" domain="[]" context="{'group_by':'account_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id='fm_account_acoount_type_action' model='ir.actions.act_window'>
            <field name="name">科目类型</field>
            <field name="res_model">fm.account.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_you_active':True}</field>
            <field name="search_view_id" ref="fm_account_acoount_type_search_view"/>
        </record>
     </data>
</odoo>

