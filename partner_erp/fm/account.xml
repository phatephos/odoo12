<?xml version="1.0"?>
<odoo>
    <data>
        <!--科目-->
        <record id="fm_account_acoount_tree" model="ir.ui.view">
            <field name="name">fm.account.tree</field>
            <field name="model">fm.account</field>
            <field name="arch" type="xml">
                <tree string="科目" default_order="code asc">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="gradation"/>
                    <field name="account_type_id"/>
                    <!--<field name="hr_auxiliary"/>-->
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="fm_account_acoount_form" model="ir.ui.view">
            <field name="name">fm.account.form</field>
            <field name="model">fm.account</field>
            <field name="arch" type="xml">
                <form string="科目">
                    <header>
                        <button name="change_is_quote" groups="fm.group_finance"
                                string="是否可被引用" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive"
                                    groups="fm.group_finance">
                                <field name="active" widget="boolean_button"
                                       options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name_dir" placeholder="名称"/>
                            </h1>
                        </div>
                        <group col="8">
                            <field name="code"/>
                            <field name="account_type_id" options="{'no_create': True}"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="parent_id" options="{'no_create_edit': True}"/>
                            <!--<field name="hr_auxiliary"/>-->
                            <!--<field name="model_ids" widget="many2many_tags"/>-->
                            <field name="orientation"/>
                            <field name="gradation"/>
                            <field name="newly_added"/>
                            <field name="delete_bool"/>
                            <field name="retain_bool"/>
                            <field name="sealed_bool"/>
                            <field name="enable_date"/>
                            <field name="end_date"/>
                            <field name="type"/>
                            <field name="amount_boolean"/>
                            <field name="accounting_interval_id" options="{'no_create_edit': True}"/>
                            <field name="is_quote" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="fm_account_acoount_search_view" model="ir.ui.view">
            <field name="name">fm.account.search</field>
            <field name="model">fm.account</field>
            <field name="arch" type="xml">
                <search string="FM Account">
                    <field name="name" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <field name="code" filter_domain="[('code','ilike',self)]"/>
                    <field name="account_type_id"/>
                    <field name="active"/>
                    <filter name="you_active" string="有效" domain="[('active','=', True)]"/>
                    <filter name="wu_active" string="无效" domain="[('active','=', False)]"/>
                </search>
            </field>
        </record>
        <!--看板视图-->
        <record id='fm_account_acoount_kanban' model='ir.ui.view'>
            <field name="name">fm.account.kanban</field>
            <field name="model">fm.account</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="parent_id"/>
                    <field name="account_type_id"/>
                    <field name="tag_ids"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <!--<field name="state" widget="kanban_label_selection" options="{'classes': {'new': 'draft', 'confirmed': 'confirm', 'cancelled':'second'}}"/>-->
                                </div>
                                <div>
                                    <field name="code"/>
                                    <field name="parent_id"/>
                                    <field name="account_type_id"/>
                                    <field name="tag_ids"/>

                                </div>
                                <div class="row">
                                    <!--<div class="col-xs-6">-->
                                    <!--<i class="fa fa-money"/> <field name="create_uid"/>-->
                                    <!--</div>-->
                                    <!--<div class="col-xs-6 text-right">-->
                                    <!--<i class="fa fa-clock-o"/> <field name="create_date"/>-->
                                    <!--</div>-->
                                </div>
                                <div class="row mt4">
                                    <!--<div class="col-xs-6">-->
                                    <!--<a class="btn btn-xs btn-danger" name="unlink" groups="base.group_erp_manager" string="删除" type="object">-->
                                    <!--删除-->
                                    <!--</a>-->
                                    <!--</div>-->
                                    <div class="col-xs-6">
                                        <!--<img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>-->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id='fm_account_acoount_action' model='ir.actions.act_window'>
            <field name="name">科目</field>
            <field name="res_model">fm.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_you_active':True}</field>
            <field name="search_view_id" ref="fm_account_acoount_search_view"/>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'sequence': 10, 'view_mode': 'tree', 'view_id': ref('fm_account_acoount_tree')}),
                          (0, 0, {'sequence': 20, 'view_mode': 'form', 'view_id': ref('fm_account_acoount_form')})
                          ]"/>
        </record>

    </data>
</odoo>

