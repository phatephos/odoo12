<?xml version="1.0"?>
<odoo>
     <data>

<!--税率-->
        <record id="fm_account_acoount_tax_tree" model="ir.ui.view">
             <field name="name">fm.account.tax.tree</field>
             <field name="model">fm.account.tax</field>
             <field name="arch" type="xml">
                <tree string="税率">
                    <field name="name"/>
                    <!--<field name="tax_type"/>-->
                    <field name="amount"/>
                    <!--<field name="account_id"/>-->
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="fm_account_acoount_tax_form" model="ir.ui.view">
            <field name="name">fm.account.tax.form</field>
            <field name="model">fm.account.tax</field>
            <field name="arch" type="xml">
                <form string="税率">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="名称"/>
                            </h1>
                        </div>
                        <group col="4">
                            <!--<field name="tax_type"/>-->
                            <label for="amount" string="税"/>
                            <div>
                                <field name="amount" class="oe_inline"/>
                                <label string="%" class="oe_inline"/>
                            </div>
                            <!--<field name="account_id"/>-->
                            <field name="active"/>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="fm_account_acoount_tax_search_view" model="ir.ui.view">
            <field name="name">fm.account.tax.search</field>
            <field name="model">fm.account.tax</field>
            <field name="arch" type="xml">
                <search string="税率">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <!--<field name="name" filter_domain="[('name','ilike',self)]"/>-->
                    <!--<field name="account_id"/>-->
                    <filter name="you_active" string="有效" domain="[('active','=',True)]"/>
                    <filter name="wu_active" string="无效" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By..." colspan="16">
                        <filter string="类型" domain="[]" context="{'group_by':'tax_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id='fm_account_acoount_tax_action' model='ir.actions.act_window'>
            <field name="name">税率</field>
            <field name="res_model">fm.account.tax</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_you_active':True}</field>
            <field name="search_view_id" ref="fm_account_acoount_tax_search_view"/>
        </record>

     </data>
</odoo>

