<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--**********************票据类型******************-->
        <record id="view_fm_account_bill_type_form" model="ir.ui.view">
            <field name="name">fm.account_bill_type.form </field>
            <field name="model">fm.account_bill_type</field>
            <field name="arch" type="xml">
                <form string='invoice_title'>
                    <sheet>
                        <group col="8">
                            <field name="name" options="{'no_create_edit': True}"/>
                            <field name="bill_type"/>
                            <field name="bill_attribute"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--tree视图-->
        <record id="view_fm_account_bill_type_tree" model="ir.ui.view">
            <field name="name">account_bill_type tree</field>
            <field name="model">fm.account_bill_type</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="invoice_title">
                    <field name="name"/>
                    <field name="bill_type"/>
                    <field name="bill_attribute"/>
                </tree>
            </field>
        </record>
        <!--search视图-->
        <record id="view_fm_account_bill_type_search" model="ir.ui.view">
            <field name="name">票据类型</field>
            <field name="model">fm.account_bill_type</field>
            <field name="arch" type="xml">
                <search string="票据大类">
                    <field name="bill_type" string="票据大类"/>
                    <group expand="0" string="Group By">
                        <filter name='type' string="票据大类" domain="[]" context="{'group_by' : 'bill_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--动作-->
        <record id="fm_account_bill_type_action" model="ir.actions.act_window">
            <field name="name">票据类型</field>
            <field name="res_model">fm.account_bill_type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_type':1, }</field>
        </record>
    </data>
</odoo>
