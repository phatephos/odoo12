<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <data>
         <record id="fm_account_depreciation_method_form" model="ir.ui.view">
             <field name="name">fm_account_depreciation_method_form</field>
             <field name="model">fm.account.depreciation.method</field>
             <field name="arch" type="xml">
                 <form>
                    <sheet>
                        <group col="2">
                            <field name="name"  placeholder="使用英文符号"/>
                            <!--<field name="month_amount"/>-->
                            <!--<field name="depreciation_amount"/>-->
                            <field name="depreciation_formula"/>
                            <field name="depreciation_describe"/>
                        </group>
                    </sheet>
                </form>
             </field>
         </record>
         <record id="fm_account_depreciation_method_tree" model="ir.ui.view">
             <field name="name">fm_account_depreciation_method_tree</field>
             <field name="model">fm.account.depreciation.method</field>
             <field name="arch" type="xml">
                 <tree  default_order="create_date desc">
                     <field name="name"/>
                     <field name="depreciation_formula"/>
                     <field name="depreciation_describe"/>
                 </tree>
             </field>
         </record>
         <record id="fm_account_depreciation_method_filter" model="ir.ui.view">
             <field name="name">fm_account_depreciation_method_filter</field>
             <field name="model">fm.account.depreciation.method</field>
             <field name="arch" type="xml">
                 <search>
                     <field name="name"/>
                     <!--<field name="month_amount"/>-->
                     <!--<field name="depreciation_amount"/>-->
                </search>
             </field>
         </record>
         <record id='fm_account_depreciation_method_action' model='ir.actions.act_window'>
             <field name="name">折旧方式</field>
             <field name="res_model">fm.account.depreciation.method</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,search</field>
         </record>

     </data>
</odoo>

