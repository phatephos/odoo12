<?xml version="1.0"?>
<odoo>
     <data>
         <record id="fm_nc_type_tree" model="ir.ui.view">
             <field name="name">fm.nc_type.tree</field>
             <field name="model">fm.nc_type</field>
             <field name="arch" type="xml">
                 <tree string="业务流程">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="material_ids" widget="many2many_tags"/>
                    <field name="in_out"/>
                    <field name="archives_id" />
                 </tree>
             </field>
         </record>
         <record id="fm_nc_type_form" model="ir.ui.view">
             <field name="name">fm.nc_type.form</field>
             <field name="model">fm.nc_type</field>
             <field name="arch" type="xml">
                 <form string="业务流程">
                     <sheet>
                         <group>
                             <field name="archives_id" />
                         </group>
                        <group col="8">
                            <field name="code"/>
                            <field name="name"/>
                            <field name="material_ids"  widget="many2many_tags" required="1"/>
                            <field name="in_out" required="1"/>
                        </group>
                         <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                     </sheet>
                 </form>
             </field>
         </record>
         <record id='fm_nc_type_action' model='ir.actions.act_window'>
             <field name="name">业务流程</field>
             <field name="res_model">fm.nc_type</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
         </record>
     </data>
</odoo>

