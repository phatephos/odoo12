<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <data>
         <record id="em_position_form" model="ir.ui.view">
             <field name="name">em.position_form</field>
             <field name="model">em.position</field>
             <field name="arch" type="xml">
                 <form>
                     <header>
                         <field name="state" widget="statusbar"/>
                         <button name="action_approval" string="提交" type="object" states="draft" class="oe_highlight"/>
                         <button name="action_approved" string="审批" type="object" states="confirm" class="oe_highlight"/>
                         <button name="action_draft" string="取消" type="object" states="confirm,done" class="oe_highlight"/>
                     </header>
                     <sheet>
                         <group>
                            <field name="name"/>
                            <field name="position_code"/>
                            <field name="position_id"  options="{'no_create_edit': 1}"/>
                            <field name="is_material"/>
                            <field name="company_id"  options="{'no_create_edit': 1}"/>
                         </group>
                     </sheet>
                 </form>
             </field>
         </record>
         <record id="em_position_tree" model="ir.ui.view">
             <field name="name">em.position_tree</field>
             <field name="model">em.position</field>
             <field name="arch" type="xml">
                 <tree default_order="create_date desc">
                     <field name="company_id"/>
                     <field name="name"/>
                     <field name="position_code"/>
                     <field name="position_id"/>
                     <field name="state"/>
                     <field name="company_id"/>
                 </tree>
             </field>
         </record>
         <record id="em_position_filter" model="ir.ui.view">
             <field name="name">em.position_search</field>
             <field name="model">em.position</field>
             <field name="arch" type="xml">
                 <search>
                     <field name="name" string="名称"/>
                     <field name="position_code" string="位置编码"/>
                     <field name="position_id" string="父级分类"/>
                     <field name="company_id" string="公司"/>
                </search>
             </field>
         </record>
         <record id='em_equipment_position_action' model='ir.actions.act_window'>
             <field name="name">设备位置</field>
             <field name="res_model">em.position</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,search</field>
             <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                 Click to create a new vehicle.
               </p>
             </field>
         </record>

     </data>
</odoo>

