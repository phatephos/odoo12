<?xml  version="1.0"?>
<odoo>
    <data>
        <!--存货组织-->
        <record id="inventory_organization_tree" model="ir.ui.view">
            <field name="name">em.inventory_organization.tree</field>
            <field name="model">em.inventory_organization</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="company_id"/>
                    <field name="name"/>
                    <field name="inventory_organization_name"/>
                    <field name="code"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="inventory_organization_form" model="ir.ui.view">
            <field name="name">em.inventory_organization.form</field>
            <field name="model">em.inventory_organization</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_approval" string="提交" type="object" states="draft" class="oe_highlight"/>
                        <button name="action_approved" string="审批" type="object" states="confirm" class="oe_highlight"/>
                        <button name="action_draft" string="取消" type="object" states="confirm,done"
                                class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <!--<field  name="name"/>-->
                                <field name="code" required="1"/>
                                <field name="inventory_organization_name"/>
                                <field name="company_id" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="inventory_organization_search_view" model="ir.ui.view">
            <field name="name">em.inventory_organization.search</field>
            <field name="model">em.inventory_organization</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="company_id"/>
                    <field name="inventory_organization_name"/>
                    <field name="code"/>
                    <field name="state"/>
                </search>
            </field>
        </record>
        <!--看板视图-->
        <record id='inventory_organization_kanban' model='ir.ui.view'>
            <field name="name">em.inventory_organization.kanban</field>
            <field name="model">em.inventory_organization</field>
            <field name="arch" type="xml">
                <kanban default_order="create_date  desc">
                    <field name="inventory_organization_name"/>
                    <field name="code"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        组织名称:
                                        <strong class="o_kanban_record_title">
                                            <field name="inventory_organization_name"/>
                                        </strong>
                                    </div>
                                    <!--<field name="state" widget="kanban_label_selection" options="{'classes': {'new': 'draft', 'confirmed': 'confirm', 'cancelled':'second'}}"/>-->
                                </div>
                                <div>
                                    编码:
                                    <field name="code"/>
                                </div>
                                <div>
                                    公司:
                                    <field name="company_id"/>
                                </div>
                                <div>
                                    状态:
                                    <field name="state"/>
                                </div>
                                <div class="row">
                                    <!--<div class="col-xs-6">-->
                                    <!--<i class="fa fa-money"/> <field name="create_uid"/>-->
                                    <!--</div>-->
                                    <!--<div class="col-xs-6 text-right">-->
                                    <!--<i class="fa fa-clock-o"/> <field name="create_date"/>-->
                                    <!--</div>-->
                                </div>
                                <div class="row mt4">
                                    <!--<div class="col-xs-6">-->
                                    <!--<a class="btn btn-xs btn-danger" name="unlink" groups="base.group_erp_manager" string="删除" type="object">-->
                                    <!--删除-->
                                    <!--</a>-->
                                    <!--</div>-->
                                    <div class="col-xs-6">
                                        <!--<img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>-->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id='inventory_organization_action' model='ir.actions.act_window'>
            <field name="name">存货组织</field>
            <field name="res_model">em.inventory_organization</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="inventory_organization_search_view"/>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'sequence': 10, 'view_mode': 'tree', 'view_id': ref('inventory_organization_tree')}),
                          (0, 0, {'sequence': 20, 'view_mode': 'form', 'view_id': ref('inventory_organization_form')}),
                          (0, 0, {'sequence': 20, 'view_mode': 'kanban', 'view_id': ref('inventory_organization_kanban')})
                          ]"/>
        </record>

    </data>
</odoo>