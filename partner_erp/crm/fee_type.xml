<?xml version="1.0"?>
<odoo>
    <!--新车库存-->
     <data>
         <record id="crm_c_fee_type_tree" model="ir.ui.view">
             <field name="name">crm_c.fee_type.tree</field>
             <field name="model">crm_c.fee_type</field>
             <field name="arch" type="xml">
                 <tree string="fee_type_tree" default_order="create_date desc">
                    <field name="name"/>
                    <field name="user_id"/>
                 </tree>
             </field>
         </record>
         <record id="crm_c_fee_type_form" model="ir.ui.view">
             <field name="name">crm_c.fee_type.form</field>
             <field name="model">crm_c.fee_type</field>
             <field name="arch" type="xml">
                 <form string="fee_type_form">
                     <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="user_id"/>
                        </group>
                     </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                 </form>
             </field>
         </record>
         <record id="crm_c_fee_type_filter" model="ir.ui.view">
             <field name="name">crm_c.fee_type.form</field>
             <field name="model">crm_c.fee_type</field>
             <field name="arch" type="xml">
                 <search string="fee_type_filter">
                     <field name="name"/>
                     <field name="user_id"/>
                </search>
             </field>
         </record>
         <!--看板视图-->
         <record id='crm_c_fee_type_kanban' model='ir.ui.view'>
             <field name="name">crm_c.fee_type.form</field>
             <field name="model">crm_c.fee_type</field>
             <field name="arch" type="xml">
                <kanban default_order="create_date desc">
                    <field name="name"/>
                    <field name="user_id"/>
                </kanban>
            </field>
        </record>
         <record id='crm_c_fee_type_action' model='ir.actions.act_window'>
             <field name="name">出口运输费用类型</field>
             <field name="res_model">crm_c.fee_type</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form,kanban</field>
             <field name="help" type="html">
                 <p class="oe_view_nocontent_create">
                 Click to create a new vehicle.
               </p><p>
                 You will be able to manage your fleet by keeping track of the
                 contracts, services, fixed and recurring costs, odometers and
                 fuel logs associated to each vehicle.
             </p><p>
                 Odoo will warn you when services or contract have to be
                 renewed.
               </p>
             </field>
         </record>

     </data>
</odoo>

