<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--form视图-->
        <record id="view_mes_block_form" model="ir.ui.view">
            <field name="name">生产装置</field>
            <field name="model">mes.block</field>
            <field name="arch" type="xml">
                <form string="block">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="em.group_finance_manage">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                         </div>
                        <group col="8">
                            <field name="area_id" options="{'no_create_edit': True}"/>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="production_system_id" options="{'no_create_edit': True}"/>
                            <field name="company_id" options="{'no_create_edit': True}"/>
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <!--tree视图-->
        <record id="view_mes_block_tree" model="ir.ui.view">
            <field name="name">生产装置</field>
            <field name="model">mes.block</field>
            <field name="arch" type="xml">
                <tree string="block">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="production_system_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        <!--动作-->
        <record id="action_mes_block" model="ir.actions.act_window">
            <field name="name">生产装置</field>
            <field name="res_model">mes.block</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>